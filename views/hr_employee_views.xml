<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_external_ids" model="ir.ui.view">
        <field name="name">hr.employee.form.external.ids</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_external_ids" type="object" class="oe_stat_button" icon="fa-link">
                    <div class="o_stat_info">
                        <span class="o_stat_text">External IDs</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
