<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_employee_form_external_ids" model="ir.ui.view">
        <field name="name">hr.employee.form.external.ids</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="External IDs" name="external_ids">
                    <field name="external_ids" context="{'default_res_model': 'hr.employee', 'default_res_id': id}">
                        <list editable="bottom">
                            <field name="system_id" options="{'no_create': True}"/>
                            <field name="external_id"/>
                            <field name="last_sync" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                            <button name="action_sync" type="object" string="Sync" icon="fa-refresh"/>
                        </list>
                        <form>
                            <group>
                                <field name="system_id" options="{'no_create': True}"/>
                                <field name="external_id"/>
                                <field name="notes"/>
                                <field name="last_sync" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </form>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
</odoo>

