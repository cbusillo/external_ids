<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_external_ids" model="ir.ui.view">
        <field name="name">product.template.form.external.ids</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_external_ids" type="object" class="oe_stat_button" icon="fa-link">
                    <div class="o_stat_info">
                        <span class="o_stat_text">External IDs</span>
                    </div>
                </button>

            </xpath>
        </field>
    </record>
</odoo>
