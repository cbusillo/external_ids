<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_form_external_ids" model="ir.ui.view">
        <field name="name">product.template.form.external.ids</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="External IDs" name="external_ids">
                    <field name="external_ids"
                           context="{'default_res_model': 'product.template', 'default_res_id': id}">
                        <list editable="bottom">
                            <field name="system_id" options="{'no_create': True}"/>
                            <field name="external_id"/>
                            <field name="last_sync" readonly="1"/>
                            <field name="active" widget="boolean_toggle"/>
                            <button name="action_sync" type="object" string="Sync" icon="fa-refresh"/>
                        </list>
                        <form>
                            <group>
                                <field name="system_id" options="{'no_create': True}"/>
                                <field name="external_id"/>
                                <field name="notes"/>
                                <field name="last_sync" readonly="1"/>
                                <field name="active"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
